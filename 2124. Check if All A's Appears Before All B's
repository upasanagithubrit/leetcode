class Solution {
public:
    bool checkString(string s) {
        int a=0;
        int b=0;
        int n=s.length();
        for(int i=0;i<n;i++)
            {
            if(s[i]=='a' && b==0)
                {
                a++;
                
                }
            else if(s[i]=='b') b++;
            else
                return false;
                
            
            
            }
        return true;
    }
};
